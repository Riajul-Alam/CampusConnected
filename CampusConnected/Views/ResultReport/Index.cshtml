@model CampusConnected.Models.ResultReport

@{
    ViewData["Title"] = "Index";
    var modelData = ViewData["ViewModelData"] as CampusConnected.Models.ResultReport;
    var SortedResult = ViewData["SortedResults"] as CampusConnected.Models.ResultSubmission;
}

<style>
    body {
        background-color: #f0f0f0; /* Light background color outside the form */
        color: #333; /* Dark font color */
    }

    .custom-background {
        background-color: #f8f8f8; /* Brighter background color for the form */
        padding: 20px; /* Add padding for better visibility */
        border-radius: 10px; /* Optional: Add border radius for rounded corners */
    }

    .custom-form-label {
        font-size: 16px; /* Font size for form labels */
        color: #007bff; /* Blue font color for form labels */
    }

    .custom-form-button {
        font-size: 18px; /* Font size for form button */
        color: #ffffff; /* White font color for form button */
        background-color: #28a745; /* Green background color for form button */
    }

</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-background">
            <form asp-action="Report">
                   

                <div class="form-group">
                    <label asp-for="DepartmentId" class="custom-form-label">Department</label>
                    <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(modelData.DepartmentList,"DId", "Name"))">
                        <option value="">-- Select Department --</option>
                    </select>
                </div>



                <div class="form-group">
                    <label asp-for="StudentId" class="custom-form-label">Student</label>
                    <select class="form-control" asp-for="StudentId" asp-items="@(new SelectList(modelData.StudentList,"Id", "StudentId"))">
                        <option value="">-- Select Student ID --</option>
                    </select>
                </div>






                <div class="form-group">
                    <input type="submit" value="Show Report" class="btn btn-primary btn-block custom-form-button" />
                </div>

            </form>
        </div>
    </div>


</div>


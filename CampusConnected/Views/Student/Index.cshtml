@model CampusConnected.Models.Student

@{
    ViewData["Title"] = "Index";
    var modelData = ViewData["ViewModelData"] as CampusConnected.Models.ResultReport;
    var SortedResult = ViewData["SortedResults"] as CampusConnected.Models.ResultSubmission;
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-background">
            <form asp-controller="Student" asp-action="Report" method="post">
                <div class="form-group">
                    <label class="custom-form-label">Department</label>
                    <input type="text" class="form-control" value="@ViewBag.CurrentDepartmentId" readonly />
                </div>

                <div class="form-group">
                    <label class="custom-form-label">Student ID</label>
                    <input type="text" class="form-control" value="@ViewBag.CurrentStudentId" readonly />
                </div>

                <div class="form-group">
                    <input type="submit" value="Show Report" class="btn btn-primary btn-block custom-form-button" />
                </div>
            </form>
        </div>
    </div>
</div>

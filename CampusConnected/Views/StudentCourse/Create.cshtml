@model CampusConnected.Models.StudentCourse

@{
    ViewData["Title"] = "Create";
    var studentModel = ViewData["StudentModel"] as CampusConnected.Models.StudentCourse;
    var allCourse = ViewData["AllCourses"] as List<String>;
}
<style>
  

    .form-container {
        max-width: 400px; /* Adjust the maximum width as needed */
        margin: auto; /* Center the container horizontally */
        padding: 20px; /* Add padding for spacing */
        border: 1px solid #ccc; /* Add a border for styling */
        border-radius: 5px; /* Optional: Add border-radius for rounded corners */
    }
</style>

<h1>Create</h1>

<h4>StudentCourse</h4>
<hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-container">
                <div class="form-group">
                    <label asp-for="StudentId">Student ID</label>
                    <select asp-for="StudentId" asp-items="@(new SelectList(studentModel.StudentList,"Id", "StudentId"))">
                        <option value="">-- Select Student --</option>
                    </select>
                </div>

                <div class="form-group" style="padding:10px; margin:10px;">
                    <label asp-for="CourseId">Course</label>
                    <select asp-for="CourseId" asp-items="@(new SelectList(studentModel.CourseList,"CId", "CourseName"))">
                        <option value="">-- Select Course --</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" onclick="saveCourses()" />
                </div>
            </div>


        </form>
        </div>

        <div class="col-md-4">

        <table class="table">
            <thead>
                <tr>
                    <th>Available Course</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var courseName in allCourse)
                {
                    <tr>
                        <td>@courseName</td>
                    </tr>
                }
            </tbody>
        </table>


        </div>

    <div class="col-md-4">

        <table class="table">
            <thead>
                <tr>
                    <th>Registered Course</th>
                </tr>
            </thead>
            <tbody>
               @* @foreach (var courseName in allCourse)
                {*@
                    <tr>
                        @*<td>@courseName</td>*@
                    </tr>
                @*}*@
            </tbody>
        </table>


    </div>



    </div>

    




@model IEnumerable<Connected_Campus.Models.Course>

@{
    ViewData["Title"] = "ShowOfferedCourses";
}

<h1>ShowOfferedCourses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditHours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
